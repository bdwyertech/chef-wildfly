<% wildfly = node['wildfly'] -%>
<%= ::File.join(::File.dirname(wildfly['log']['console_log']), '*.log') %> {
        daily
        rotate <%= wildfly['log']['max_age'].to_i %>
        missingok
        dateext
        copytruncate
        compress
        delaycompress
        notifempty
        maxage <%= wildfly['log']['max_age'].to_i %>
}
