<?xml version="1.0" encoding="UTF-8"?>

<!-- Managed by Chef - local changes may be overwritten -->
<datasources xmlns="http://www.jboss.org/ironjacamar/schema"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.jboss.org/ironjacamar/schema http://docs.jboss.org/ironjacamar/schema/datasources_1_0.xsd">
	<datasource jndi-name="<%= @jndi_name %>" pool-name="<%= @pool_name %>" enabled="true">
	  <connection-url>jdbc:postgresql://<%= @postgres_server %>:<%= @postgres_port %>/<%= @postgres_db_name %></connection-url>
	  <driver>postgresql</driver>
	  <pool>
	    <min-pool-size><%= @postgres_pool_min %></min-pool-size>
	    <max-pool-size><%= @postgres_pool_max %></max-pool-size>
	  </pool>
	  <security>
	    <user-name><%= @postgres_user %></user-name>
	    <password><%= @postgres_pass %></password>
	  </security>
	</datasource>
</datasources>
