<?xml version="1.0" encoding="UTF-8"?>

<!-- Managed by Chef - local changes may be overwritten -->

<module xmlns="urn:jboss:module:1.3" name="<%= @module_name %>">
    <resources>
        <resource-root path="<%= @resource_path %>"/>
    </resources>
    <dependencies>
        <% @module_dependencies.each do |dependency| -%>
        <module name="<%= dependency %>"/>
        <% end -%>
        <% @optional_dependencies.each do |dependency| -%>
        <module name="<%= dependency %>" optional="true"/>
        <% end -%>
    </dependencies>
</module>
